













# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Supabase Configuration (Handles Auth + Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (MongoDB Atlas for app data)
MONGODB_URI=mongodb://localhost:27017/campusflow
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/campusflow

# Redis (Upstash for Socket.io adapter)
REDIS_URL=redis://localhost:6379
# For Upstash: rediss://:password@host:port

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRES_IN=600000
OTP_LENGTH=6

# Admin Configuration
ADMIN_EMAIL=admin@campusflow.com
ADMIN_PASSWORD=change-this-password
